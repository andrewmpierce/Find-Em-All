<%= simple_form_for @pokemon do |f| %>
  <%= f.input :type, label: 'What type of pokemon?', error: 'Mandatory field.' %>
  <%= f.input :location, label: 'Where were you?' %>
  <%= f.input :lure, label: 'Were you near a lure?' %>
  <%= f.input :incense, label: 'Were you using incense?' %>
  <%= f.input :user_lvl, label: 'What was your trainer level at the time?' %>

  <%= f.button :submit %>
<% end %>
